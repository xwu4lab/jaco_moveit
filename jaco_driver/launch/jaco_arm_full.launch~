<launch>
  
  <!-- The planning and execution components of MoveIt! configured to run -->
  <!-- using the ROS-Industrial interface. -->

  <rosparam command="load" file="$(find jaco2_moveit_config)/config/joint_names.yaml"/>

  <arg name="sim" default="true" />
  <arg name="robot_ip" unless="$(arg sim)" />
 
  <!-- load the robot_description parameter before launching ROS-I nodes -->
  <include file="$(find jaco2_moveit_config)/launch/planning_context.launch" >
    <arg name="load_robot_description" value="false" />
  </include>

  <!-- run the robot simulator and action interface nodes -->
  <group if="$(arg sim)">
    <include file="$(find industrial_robot_simulator)/launch/robot_interface_simulator.launch" />
  </group>

  <arg name="use_urdf" default="true"/>

  <node name="jaco_arm_driver" pkg="jaco_driver" type="jaco_arm_driver" output="screen" cwd="node">
    <!-- Set this parameter to use a specific arm on your system    --> 
    <!-- <param name="serial_number" value="PJ00000001030703130" /> -->
    <param name="tf_prefix" value="jaco_"/>
    <param name="finger_angle_conv_ratio" value="0.012"/>
  </node>
    
  
  <group if="$(arg use_urdf)">
    <param name="robot_description" textfile="$(find jaco2)/robots/jaco2.urdf" />
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" > 
    <rosparam param="source_list">["jaco_arm_driver/out/joint_position_state"]</rosparam>
    </node>
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find jaco2_moveit_config)/launch/moveit.rviz" />
  </group>
   <include file="$(find jaco2_moveit_config)/launch/move_group.launch">
    <arg name="publish_monitored_planning_scene" value="true" />
  </include>

  
  <include file="$(find jaco2_moveit_config)/launch/default_warehouse_db.launch" />

</launch>
